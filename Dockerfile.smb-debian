# rebased/repackaged base image that only updates existing packages
FROM mbentley/debian:bookworm
LABEL maintainer="Matt Bentley <mbentley@mbentley.net>"

ARG DEBIAN_FRONTEND=noninteractive

# install samba and s6; create supporting directories
RUN apt-get update &&\
  apt-get install -y --no-install-recommends attr avahi-daemon avahi-utils ca-certificates dbus libavahi-compat-libdnssd1 libnss-mdns s6 samba samba-common-bin samba-vfs-modules &&\
  touch /etc/samba/lmhosts &&\
  rm /etc/samba/smb.conf &&\
  mkdir /var/run/dbus &&\
  rm -rf /var/lib/apt/lists/*

# copy in necessary supporting config files
COPY s6 /etc/s6
COPY entrypoint.sh /

VOLUME ["/var/lib/samba","/var/cache/samba","/run/samba"]

ENTRYPOINT ["/entrypoint.sh"]
CMD ["s6-svscan","/etc/s6"]
